<div class="tripbkg">
  <div class="browsetrip center">
    <h1>Trips</h1>
    <br />
    <table class="table">
     <thead>
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Date</th>
        <th>Time</th>
        <th>Origin</th>
        <th>Destination</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @trips.each do |trip| %>
        <tr>
          <td><%= trip.fullname %></td>
          <td><%= trip.phonenumber %></td>
          <td><%= trip.date %></td>
          <td><%= trip.time %></td>
          <td><%= trip.origin %></td>
          <td><%= trip.destination %></td>
          <% if trip.user == current_user %>
            <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
            <td><%= link_to 'delete', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<br>


